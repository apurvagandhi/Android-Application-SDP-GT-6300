<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="738dp"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:ems="10"
            android:inputType="text"
            android:text="Main Menu"
            android:textAlignment="center"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="-187dp"
            tools:layout_editor_absoluteY="407dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewCurrentJobButton"
                android:layout_width="173dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:onClick="setBtnViewCurrentJob"
                android:text="Current Job"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewJobOfferButton"
                android:layout_width="173dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:text="New Job Offer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/listJobOfferButton"
                android:layout_width="173dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:text="List Job Offers" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/comparisonSettingButton"
                android:layout_width="173dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:text="Comparison Setting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/compareJobButton"
                android:layout_width="173dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:text="Compare Jobs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>